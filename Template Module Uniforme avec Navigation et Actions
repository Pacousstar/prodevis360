    <!-- JavaScript pour les fonctionnalités -->
    <script>
        // Validation du formulaire
        (function() {
            'use strict';
            
            const form = document.getElementById('moduleForm');
            
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                
                // Validation personnalisée
                const quantite = parseFloat(document.getElementById('quantite').value);
                const pu = parseFloat(document.getElementById('pu').value);
                
                if (quantite <= 0) {
                    document.getElementById('quantite').setCustomValidity('La quantité doit être supérieure à 0');
                    event.preventDefault();
                } else {
                    document.getElementById('quantite').setCustomValidity('');
                }
                
                if (pu <= 0) {
                    document.getElementById('pu').setCustomValidity('Le prix unitaire doit être supérieur à 0');
                    event.preventDefault();
                } else {
                    document.getElementById('pu').setCustomValidity('');
                }
                
                form.classList.add('was-validated');
            }, false);
            
            // Calcul en temps réel du prix total
            const quantiteInput = document.getElementById('quantite');
            const puInput = document.getElementById('pu');
            const transportInput = document.getElementById('transport');
            
            function updateTotal() {
                const quantite = parseFloat(quantiteInput.value) || 0;
                const pu = parseFloat(puInput.value) || 0;
                const transport = parseFloat(transportInput.value) || 0;
                const total = (quantite * pu) + transport;
                
                // Affichage du total en temps réel
                let totalDisplay = document.getElementById('totalPreview');
                if (!totalDisplay && quantite > 0 && pu > 0) {
                    totalDisplay = document.createElement('div');
                    totalDisplay.id = 'totalPreview';
                    totalDisplay.style.cssText = `
                        position: fixed;
                        bottom: 20px;
                        right: 20px;
                        background: var(--gradient-primary);
                        color: white;
                        padding: 1rem 1.5rem;
                        border-radius: 12px;
                        box-shadow: var(--shadow-hard);
                        font-weight: bold;
                        z-index: 1000;
                        animation: fadeIn 0.3s ease;
                    `;
                    document.body.appendChild(totalDisplay);
                }
                
                if (totalDisplay && quantite > 0 && pu > 0) {
                    totalDisplay.innerHTML = `
                        <div style="font-size: 0.9rem; opacity: 0.9;">Prix total prévu:</div>
                        <div style="font-size: 1.2rem;">${total.toLocaleString('fr-FR')} FCFA</div>
                    `;
                } else if (totalDisplay) {
                    totalDisplay.remove();
                }
            }
            
            [quantiteInput, puInput, transportInput].forEach(input => {
                input.addEventListener('input', updateTotal);
            });
        })();
        
        // Fonction d'édition (à implémenter selon les besoins)
        function editElement(id) {
            // Redirection vers une page d'édition ou ouverture d'un modal
            window.location.href = `edit_element.php?projet_id=<?= $projet_id ?>&devis_id=<?= $devis_id ?>&element_id=${id}&module=<?= $current_module ?>`;
        }
        
        // Auto-suggestions pour la désignation (optionnel)
        const designationInput = document.getElementById('designation');
        const suggestions = [
            'Tuyau PVC Ø 32mm',
            'Coude PVC 90° Ø 32mm',
            'Té PVC Ø 32mm',
            'Robinet d\'arrêt',
            'Siphon lavabo',
            'Flexible douche',
            'Pomme de douche',
            'Mitigeur lavabo',
            'WC suspendu',
            'Réservoir WC'
        ];
        
        designationInput.addEventListener('input', function() {
            const value = this.value.toLowerCase();
            const matches = suggestions.filter(s => s.toLowerCase().includes(value));
            
            // Vous pouvez implémenter une liste déroulante de suggestions ici
        });
        
        // Confirmation avant suppression
        document.querySelectorAll('form[onsubmit*="confirm"]').forEach(form => {
            form.addEventListener('submit', function(e) {
                if (!confirm('Êtes-vous sûr de vouloir supprimer cet élément ?')) {
                    e.preventDefault();
                }
            });
        });
        
        // Mise à jour automatique du récapitulatif après ajout/suppression
        if (window.location.search.includes('deleted=1') || window.location.search.includes('added=1')) {
            // Appel AJAX pour mettre à jour le récapitulatif
            fetch(`update_recapitulatif.php?projet_id=<?= $projet_id ?>&devis_id=<?= $devis_id ?>&module=<?= $current_module ?>`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log('Récapitulatif mis à jour automatiquement');
                    }
                })
                .catch(error => console.log('Erreur mise à jour récapitulatif:', error));
        }
    </script>
</body>
</html>