    'ferronnerie' => ['title' => 'Ferronnerie', 'icon' => 'fa-shield-alt', 'file' => 'Ferronnerie.php']
];

// Module actuel (à définir dans chaque module)
$current_module = 'plomberie'; // À remplacer par le module actuel

// Navigation dynamique
function getNavigationModules($modules_config, $current_module) {
    $modules_keys = array_keys($modules_config);
    $current_index = array_search($current_module, $modules_keys);
    
    $navigation = [
        'accueil' => ['title' => 'Accueil', 'icon' => 'fa-home', 'file' => 'devis_detail.php'],
        'precedents' => [],
        'suivants' => []
    ];
    
    // 2 modules précédents
    for ($i = max(0, $current_index - 2); $i < $current_index; $i++) {
        $key = $modules_keys[$i];
        $navigation['precedents'][] = [
            'key' => $key,
            'title' => $modules_config[$key]['title'],
            'icon' => $modules_config[$key]['icon'],
            'file' => $modules_config[$key]['file']
        ];
    }
    
    // 2 modules suivants
    for ($i = $current_index + 1; $i <= min(count($modules_keys) - 1, $current_index + 2); $i++) {
        $key = $modules_keys[$i];
        $navigation['suivants'][] = [
            'key' => $key,
            'title' => $modules_config[$key]['title'],
            'icon' => $modules_config[$key]['icon'],
            'file' => $modules_config[$key]['file']
        ];
    }
    
    return $navigation;
}

$navigation = getNavigationModules($modules_config, $current_module);

// Gestion des actions (Modifier, Supprimer)
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    if (isset($_POST['action'])) {
        $action = $_POST['action'];
        $id = intval($_POST['id'] ?? 0);
        
        if ($action === 'delete' && $id > 0) {
            try {
                $stmt = $pdo->prepare("DELETE FROM plomberie WHERE id = ? AND projet_id = ? AND devis_id = ?");
                $stmt->execute([$id, $projet_id, $devis_id]);
                header("Location: " . $_SERVER['PHP_SELF'] . "?projet_id=$projet_id&devis_id=$devis_id&deleted=1");
                exit();
            } catch (PDOException $e) {
                $error = "Erreur lors de la suppression : " . $e->getMessage();
            }
        }
    }
}

// Récupération des données du module
try {
    $stmt = $pdo->prepare("SELECT * FROM plomberie WHERE projet_id = ? AND devis_id = ? ORDER BY id DESC");
    $stmt->execute([$projet_id, $devis_id]);
    $elements = $stmt->fetchAll(PDO::FETCH_ASSOC);
    
    // Calcul des totaux
    $total_materiaux = array_sum(array_column($elements, 'pt'));
    $total_transport = array_sum(array_column($elements, 'transport'));
    $total_general = $total_materiaux + $total_transport;
} catch (PDOException $e) {
    $elements = [];
    $total_materiaux = $total_transport = $total_general = 0;
}
