$projet_id = intval($_GET['projet_id'] ?? 0);
$devis_id = intval($_GET['devis_id'] ?? 0);

if ($projet_id <= 0 || $devis_id <= 0) {
    header("Location: liste_projets.php");
    exit();
}

// Configuration des modules pour navigation dynamique
